<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       app:cardElevation="3dp"
       app:cardCornerRadius="5dp"
       >

       <LinearLayout
           android:id="@+id/contact_view_base"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="5dp"
           >

           <LinearLayout
               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/contact_image"
                   android:layout_marginTop="5dp"
                   android:layout_marginStart="12dp"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/user_avatar"
                   app:civ_border_color="@color/white"
                   app:civ_border_width="2dp" />

               <TextView
                   android:id="@+id/contact_login"
                   android:layout_marginTop="5dp"
                   android:layout_width="match_parent"
                   android:gravity="center"
                   android:text="Defunkt"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorGray"
                   android:fontFamily="sans-serif-medium"
                   android:textSize="13sp"
                   />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/contact_friendly_name"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:background="@color/colorShimmer"
                       android:ellipsize="end"
                       android:padding="3dp"
                       android:focusable="false"
                       android:fontFamily="sans-serif-medium"
                       android:maxLines="1"
                       android:textColor="@color/colorGrayDarker"
                       android:textSize="15.5sp" />

                   <TextView
                       android:id="@+id/contact_type"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       android:background="@color/colorShimmer"
                       android:focusable="false"
                       android:fontFamily="sans-serif-medium"
                       android:gravity="right"
                       android:textAlignment="gravity"
                       android:textColor="@color/colorGrayDarker"
                       android:textSize="12sp" />
               </LinearLayout>

               <RelativeLayout
                   android:layout_marginTop="3dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >

                   <TextView
                       android:id="@+id/contact_link"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignParentStart="true"
                       android:layout_marginTop="3dp"
                       android:layout_marginEnd="3dp"
                       android:layout_marginBottom="3dp"
                       android:layout_weight="1"
                       android:background="@color/colorShimmer"
                       android:fontFamily="sans-serif-medium"
                       android:textColor="@color/colorBlueDark" />

               </RelativeLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/contact_followers"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:background="@color/colorShimmer"
                       android:ellipsize="end"
                       android:focusable="false"
                       android:fontFamily="sans-serif-medium"
                       android:maxLines="1"
                       android:padding="3dp"
                       android:textColor="@color/colorGrayDarker"
                       android:textSize="12sp" />

                   <TextView
                       android:id="@+id/contact_following"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:background="@color/colorShimmer"
                       android:focusable="false"
                       android:padding="3dp"
                       android:fontFamily="sans-serif-medium"
                       android:gravity="start"
                       android:textAlignment="gravity"
                       android:textColor="@color/colorGrayDarker"
                       android:textSize="12sp" />
               </LinearLayout>


           </LinearLayout>

       </LinearLayout>

   </androidx.cardview.widget.CardView>


</RelativeLayout>
